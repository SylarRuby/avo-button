<div class="flex flex-col items-center justify-center min-h-screen gap-8">
  <div class="flex flex-col gap-4">
    <h2 class="text-xl font-semibold">Enabled Button</h2>
    <%= render ButtonComponent.new(size: :sm) %>
  </div>

  <div class="flex flex-col gap-4">
    <h2 class="text-xl font-semibold">Medium Button</h2>
    <%= render ButtonComponent.new(size: :md, theme: :secondary) %>
  </div>

  <div class="flex flex-col gap-4">
    <h2 class="text-xl font-semibold">Large Button</h2>
    <%= render ButtonComponent.new(size: :lg, theme: :primary) %>
  </div>

  <div class="flex flex-col gap-4">
    <h2 class="text-xl font-semibold">Disabled Button</h2>
    <%= render ButtonComponent.new(disabled: true) %>
  </div>
</div>